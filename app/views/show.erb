<h1><%= @title %></h1>

<div>
  <form method="post" action="/meetups/<%=@meetup.id%>">
    <div>
      <input type="submit" style="color:#000;" value="Join Meet Up">
    </div>
  </form>
</div>
<br>


<%@meetup.users.each do |single| %>
<img class="profile_pic" src="<%=single.avatar_url%>" />
	<%=single.username%>
<%end%>

<h1>Meetup Details</h1>
<ul>
<li><%=@meetup.title%></li>
<li><%=@meetup.description%></li>
<li>Location: <%=@meetup.location%></li>
<li><%=@meetup.address %> </li>
<li><%=@meetup.city %> </li>
<li><%=@meetup.state %> </li>
<li><%=@meetup.zipcode %> </li>
<li><%=@meetup.topic %> </li>
</ul>

<form action="/" method="post">
  <label for="new_meetup">New Meetup:</label>
  <div class="input"><input type="text" placeholder="title" id="new_meetup" name="meetup[title]" /></div>

  <div class="input"><input type="text" placeholder="description" id="new_meetup" name="meetup[description]" />

  <div class="input"><input type="text" placeholder="yyyy-mm-dd hh:mm:ss" id="new_meetup" name="meetup[meets_at]" />

  <div class="input"><input type="text" placeholder="location" id="new_meetup" name="meetup[location]" />

  <div class="input"><input type="text" placeholder="address" id="new_meetup" name="meetup[address]" />

  <div class="input"><input type="text" placeholder="city" id="new_meetup" name="meetup[city]" />

  <div class="input"><input type="text" placeholder="state" id="new_meetup" name="meetup[state]" />

  <div class="input"><input type="text" placeholder="zipcode" id="new_meetup" name="meetup[zipcode]" />

  <div class="input"><input type="text" placeholder="topic" id="new_meetup" 
  name="meetup[topic]" />

  <div class="input"><input type="submit" value="submit">
</form>